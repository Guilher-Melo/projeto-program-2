<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.controlador.FechamentoContaController"
      spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <!-- Cabeçalho -->
    <VBox style="-fx-background-color: #4CAF50; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Fechamento de Conta" style="-fx-text-fill: white; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="20"/>
            </font>
        </Label>
    </VBox>

    <!-- Informações do Pedido -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-width: 1; -fx-background-radius: 5;">
        <Label text="Informações do Pedido" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        
        <GridPane hgap="15" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            
            <Label text="Mesa:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblNumeroMesa" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblNomeCliente" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            
            <Separator GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                <padding>
                    <Insets top="5" bottom="5"/>
                </padding>
            </Separator>
            
            <Label text="Valor Total:" GridPane.columnIndex="0" GridPane.rowIndex="3" 
                   style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Label fx:id="lblValorTotal" text="R$ 0,00" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   style="-fx-text-fill: #4CAF50; -fx-font-weight: bold; -fx-font-size: 18px;"/>
        </GridPane>
    </VBox>

    <!-- Método de Pagamento -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-width: 1; -fx-background-radius: 5;">
        <Label text="Método de Pagamento" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        
        <VBox spacing="10">
            <Label text="Selecione o método:"/>
            <ComboBox fx:id="cbMetodoPagamento" prefWidth="250"/>
        </VBox>
        
        <VBox spacing="10">
            <Label text="Valor Pago:"/>
            <TextField fx:id="txtValorPago" promptText="Digite o valor pago pelo cliente" prefWidth="250"/>
            <Label text="* Somente para pagamento em Dinheiro" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
        </VBox>
        
        <Separator/>
        
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Troco:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="lblTroco" text="R$ 0,00" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <!-- Botões de Ação -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnConfirmarPagamento" text="Confirmar Pagamento" onAction="#confirmarPagamento"
                prefWidth="180" prefHeight="40"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
        
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#cancelar"
                prefWidth="120" prefHeight="40"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

</VBox>
