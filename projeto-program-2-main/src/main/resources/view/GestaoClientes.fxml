                </Label>
                
                <GridPane hgap="15" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <!-- Nome -->
                    <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtNome" promptText="Digite o nome completo" 
                              GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <!-- Telefone -->
                    <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" 
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <!-- Email -->
                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtEmail" promptText="email@exemplo.com" 
                              GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
                
                <!-- BotÃµes de AÃ§Ã£o do FormulÃ¡rio -->
                <HBox spacing="10" alignment="CENTER_LEFT">
