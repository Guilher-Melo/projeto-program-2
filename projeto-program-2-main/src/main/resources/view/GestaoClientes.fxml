            <!-- FormulÃ¡rio de Cadastro/EdiÃ§Ã£o -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1;">
                <Label text="Cadastro de Cliente" style="-fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="16"/>
